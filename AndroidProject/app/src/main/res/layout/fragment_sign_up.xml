<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.SignUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signup_login_bg">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/sofia_pro_semi_bold"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="36.41sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="341dp"
            android:layout_height="337dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6">

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="106dp"
                android:layout_height="21dp"
                android:fontFamily="@font/sofia_pro_regular"
                android:text="Full name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="339dp"
                android:layout_height="65dp"
                android:layout_below="@+id/tvFullName"
                android:layout_marginTop="9dp"
                android:background="@drawable/button_shape_1"
                android:elevation="5dp"
                android:onClick="onClickEdtFullName"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="106dp"
                android:layout_height="21dp"
                android:layout_below="@+id/edtFullName"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/sofia_pro_regular"
                android:text="E-mail"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="339dp"
                android:layout_height="65dp"
                android:layout_below="@+id/tvEmail"
                android:layout_marginTop="9dp"
                android:background="@drawable/button_shape_1"
                android:elevation="5dp"
                android:onClick="onClickEdtEmail"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_below="@+id/edtEmail"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/sofia_pro_regular"
                android:text="Password"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="339dp"
                android:layout_height="65dp"
                android:layout_below="@+id/tvPassword"
                android:layout_marginTop="9dp"
                android:background="@drawable/button_shape_1"
                android:elevation="5dp"
                android:inputType="textPassword"
                android:onClick="onClickEdtPassword"
                app:backgroundTint="@color/white" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="248dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/sofia_pro_medium"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:backgroundTint="@color/orange"
            app:layout_constraintEnd_toEndOf="@+id/relativeLayout2"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="@+id/relativeLayout2"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="213dp"
            android:layout_height="33dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/btnLogin"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="@+id/btnSignUp"
            app:layout_constraintTop_toBottomOf="@+id/btnSignUp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sofia_pro_medium"
                android:gravity="center"
                android:text="Alreday have an account?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13.5sp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:background="@color/white"
                android:fontFamily="@font/sofia_pro_medium"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="Login"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/orange"
                android:textSize="12sp"
                app:backgroundTint="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="99dp"
            android:layout_height="25dp"
            android:fontFamily="@font/sofia_pro_medium"
            android:text="Sign up with"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="292.46dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:background="@drawable/black_line"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <Button
            android:id="@+id/fbButton"
            android:layout_width="139dp"
            android:layout_height="54dp"
            android:background="@drawable/button_shape"
            android:drawableLeft="@drawable/fb_icon"
            android:fontFamily="@font/sofia_pro_medium"
            android:text="FACEBOOK"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ggButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.217" />

        <Button
            android:id="@+id/ggButton"
            android:layout_width="139dp"
            android:layout_height="54dp"
            android:layout_toRightOf="@id/fbButton"
            android:background="@drawable/button_shape"
            android:drawableLeft="@drawable/gg_icon"
            android:fontFamily="@font/sofia_pro_medium"
            android:text="GOOGLE"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.217" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>